@{
    ViewData["Title"] = "View1";
    Layout = "~/Views/Shared/_DevExtremeLayout.cshtml";
}

<h2>View1</h2>

@(Html.DevExtreme().DataGrid<CoreLib.Inventory.Models.InvCategory>()
    .Columns(columns => {

        columns.AddFor(m => m.Id);

        columns.AddFor(m => m.Code);

        columns.AddFor(m => m.Description);

        columns.AddFor(m => m.Remarks);
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
)
