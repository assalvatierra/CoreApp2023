@{
    ViewData["Title"] = "IndexDx";
}

<h2>IndexDx</h2>

@(Html.DevExtreme().DataGrid<RealSys.CoreLib.Models.Erp.Customer>()
    .DataSource(ds => ds.Mvc()
        .Controller("CustomersDx")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("Id")
    )
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.Id);

        columns.AddFor(m => m.Name);

        columns.AddFor(m => m.Email);

        columns.AddFor(m => m.Contact1);

        columns.AddFor(m => m.Contact2);

        columns.AddFor(m => m.Remarks);

        columns.AddFor(m => m.Status);

                columns.AddFor(m => m.Id)
                    .Width(100)
                    .AllowFiltering(false)
                    .AllowSorting(false)
                    .CellTemplate(
                        @<div>
            <a href="/ErpContacts/Customers/Details/<%- data.Id %>">sample</a>
        </div>
                    );
    })
    .Editing(e => e.Mode(GridEditMode.Popup)
        .AllowUpdating(true)
        .AllowAdding(true)
        .AllowDeleting(true)
        .Popup(p => p
        .Title("Employee Info")
        .ShowTitle(true)
        .Width(700)
        .Height(525)
        )
    .Form(f => f.Items(items =>
    {
        items.AddGroup()
            .ColCount(2)
            .ColSpan(2)
            .Items(groupItems =>
            {
                groupItems.AddSimpleFor(m => m.Name);
                groupItems.AddSimpleFor(m => m.Email);
                groupItems.AddSimpleFor(m => m.Contact1);
                groupItems.AddSimpleFor(m => m.Contact2);
                groupItems.AddSimpleFor(m => m.Remarks);
                groupItems.AddSimpleFor(m => m.Status);

                groupItems.AddSimpleFor(m => m.Remarks)
                    .ColSpan(2)
                    .Editor(editor => editor.TextArea().Height(100));
            });

        items.AddGroup()
            .Caption("Contacts")
            .ColCount(2)
            .ColSpan(2)
            .Items(groupItems =>
            {
                groupItems.AddSimpleFor(m => m.Contact1);
                groupItems.AddSimpleFor(m => m.Contact2);
            });
    }))

    )
)
