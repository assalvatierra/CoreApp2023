@{
    ViewData["Title"] = "IndexDx";
}

<h2>IndexDx</h2>

@(Html.DevExtreme().DataGrid<RealSys.CoreLib.Models.Erp.Customer>()
    .DataSource(ds => ds.Mvc()
        .Controller("CustomersDx")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("Id")
    )
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.Id);

        columns.AddFor(m => m.Name);

        columns.AddFor(m => m.Email);

        columns.AddFor(m => m.Contact1);

        columns.AddFor(m => m.Contact2);

        columns.AddFor(m => m.Remarks);

        columns.AddFor(m => m.Status);
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
)
