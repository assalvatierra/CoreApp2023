@using DevExtreme.AspNet.Mvc;
@{
    ViewData["Title"] = "Supplier Dx";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Supplier Dx</h2>

@(
Html.DevExtreme().DataGrid<RealSys.CoreLib.Models.Erp.Supplier>()
    .DataSource(ds => ds.Mvc()
        .Controller("SuppliersDx")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("Id")
    ) 
    .RemoteOperations(true)
    .Columns(columns => {

    columns.AddFor(m => m.Name );
    
    columns.AddFor(m => m.Country.Name);

    columns.AddFor(m => m.SupplierType.Description);

    columns.AddFor(m => m.Status);

    columns.AddFor(m => m.Contact1);

    columns.AddFor(m => m.Contact2);


    columns.AddFor(m => m.Id)
                    .HeaderCellTemplate("Custom Link")
                    .Width(100)
                    .AllowFiltering(false)
                    .AllowSorting(false)
                    .CellTemplate(
                        @<div>
            <a href="/Items/InvItems/Details/<%- data.Id %>">Details</a>
        </div>
                    );
    })
    .Editing(e => e.Mode(GridEditMode.Popup)
        .AllowUpdating(true)
        .AllowAdding(true)
        .AllowDeleting(true)
        .Popup(p => p
        .Title(" Info")
        .ShowTitle(true)
        .Width(700)
        .Height(525)
        )
    .Form(f => f.Items(items =>
    {
        items.AddGroup()
            .ColCount(2)
            .ColSpan(2)
            .Items(groupItems =>
            {
                groupItems.AddSimpleFor(m => m.Id);
                groupItems.AddSimpleFor(m => m.Name);
                groupItems.AddSimpleFor(m => m.Code);
                groupItems.AddSimpleFor(m => m.City);
                groupItems.AddSimpleFor(m => m.Country);
                groupItems.AddSimpleFor(m => m.Website);
                groupItems.AddSimpleFor(m => m.Address);
                groupItems.AddSimpleFor(m => m.SupplierType);
                groupItems.AddSimpleFor(m => m.Contact1);
                groupItems.AddSimpleFor(m => m.Contact2);
                groupItems.AddSimpleFor(m => m.Contact3)
                    .ColSpan(2)
                    .Editor(editor => editor.TextArea().Height(100));
            });
    }))

    )
)
