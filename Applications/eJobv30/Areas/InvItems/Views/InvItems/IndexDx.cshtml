@using DevExtreme.AspNet.Mvc;
@{
    ViewData["Title"] = "Page1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Inventory Items</h2>

@(Html.DevExtreme().DataGrid<RealSys.CoreLib.Models.Erp.InvItem>()
    .DataSource(ds => ds.Mvc()
        .Controller("InvItemsDx")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("Id")
    )
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.Id);

        columns.AddFor(m => m.ItemCode);

        columns.AddFor(m => m.Description);

        columns.AddFor(m => m.Remarks);
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
)
